<%= form_for :enquiry do |f| %>
  
  <div class="row">
		<div class="large-4 columns">
			<%= f.label :name %><br>
      <%= f.text_field :name %>
		</div>
		<div class="large-4 columns">
			<%= f.label :email %><br>
    	<%= f.text_field :email, type: "email", required: "required" %>
		</div>
		<div class="large-4 columns">
			<%= f.label :contact %><br>
    	<%= f.text_field :contact, pattern: "[0-9]+" %>
		</div>
	</div>
	<div class="row">
		<div class="large-12 columns">
			<%= f.label :message %><br>
    	<%= f.text_area :message %>
		</div>
	</div>
	<div class="row">
		<div class="large-3 columns">
			<%= f.button "Submit" %>
		</div>
		<div class="large-6 columns">
			&nbsp;
		</div>
		<div class="large-3 columns">
			<%= f.button "Reset", type: "Reset" %>
		</div>
	</div>
 
<% end %>
